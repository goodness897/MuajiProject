<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/relativeLayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"></android.support.v4.view.ViewPager>
                <LinearLayout
                    android:background="#70777777"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <RadioGroup
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:orientation="horizontal"
                        android:id="@+id/radiogroup"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioButton"
                            android:checked="true"
                            android:button="@drawable/custom_btn_radio"
                            android:clickable="false" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioButton2"
                            android:button="@drawable/custom_btn_radio"
                            android:clickable="false" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioButton3"
                            android:button="@drawable/custom_btn_radio"
                            android:clickable="false" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioButton4"
                            android:button="@drawable/custom_btn_radio"
                            android:clickable="false" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioButton5"
                            android:button="@drawable/custom_btn_radio"
                            android:clickable="false" />
                    </RadioGroup>
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:textSize="15dp"
                        android:text="메뉴"
                        android:textColor="#ffffff"
                        android:gravity="bottom" />

                </LinearLayout>
            </RelativeLayout>
            TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:textColor="@color/mainColor"
                android:text="상호명" />

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한솥 도시락"
                android:textColor="#404040"
                android:textSize="21sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="72dp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="72dp">

                <RatingBar
                    android:layout_marginTop="5dp"
                    android:id="@+id/rateBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    style="@style/starRatingBar"
                    android:clickable="false"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="4.3" />

                <TextView
                    android:id="@+id/rateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="bottom" />
                <TextView
                    android:id="@+id/ratecountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="bottom" />

            </LinearLayout>

            <TextView
                android:id="@+id/item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="좋은 재료, 좋은 가격 한솥 도시락"
                android:layout_below="@+id/textView"
                android:textColor="#777777"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="72dp"/>

            ImageView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@drawable/line"/>

            TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/mainColor"
                android:text="평점"
                android:layout_marginTop="10dp" />



            <ImageView
                android:layout_marginLeft="72dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@drawable/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menuicon"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#404040"
                    android:textSize="15sp"
                    android:text="대표 메뉴"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/menu_image1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/event_image"
                    android:layout_weight="1"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/menu_image2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/event_image"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/menu_image3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/event_image"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/menu_image4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/event_image"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY" />


            </LinearLayout>
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@drawable/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <ListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></ListView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mappp"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <ImageButton
                        android:layout_marginLeft="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/mapicon"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/locationText"
                        android:layout_marginLeft="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#404040"
                        android:text="서울특별시 강남구 역삼1동 648-23 여삼빌딩 15층"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="홈페이지 연결 시, 더 많은 정보 확인이 가능합니다."
                    android:textColor="#777777"
                    android:layout_weight="1"
                    android:id="@+id/textView3"
                    android:layout_centerHorizontal="true"
                    android:textSize="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center" />
                <Button
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/mainColor"
                    android:textColor="#ffffff"
                    android:layout_marginTop="10dp"
                    android:text="평점 주기"
                    android:onClick="onButton3Clicked" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <Button
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/mainColor"
                    android:textColor="#ffffff"
                    android:paddingLeft="10dp"
                    android:text="홈페이지 연결"
                    android:drawableLeft="@drawable/home"
                    android:onClick="onButton1Clicked" />

                <Button
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/mainColor"
                    android:textColor="#ffffff"
                    android:text="전화 연결"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/phone"
                    android:onClick="onButton2Clicked" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>